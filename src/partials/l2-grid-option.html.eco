<div class="col-lg-4 col-md-6 menu-option">
  <a href="<%= @link %>" class="link-container clearfix">
    <div class="option-image <%= @subjectclass %>" style="background-image: url('<%= @image %>')"></div>
    <div class="option-text-container">
      <div class="option-head-text <%= @subjectclass %>"><%= @title %></div>
      <div class="option-text">
        <%= @text %>
      </div>
    </div>
  </a>
</div>